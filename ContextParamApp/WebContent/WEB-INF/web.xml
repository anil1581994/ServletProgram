		<servlet-class>com.bridgelabz.program.ReadContextParam</servlet-class>
		
	</servlet>

	<context-param>
		<param-name>dname</param-name>
		<param-value>com.mysql.jdbc.Driver</param-value>
	</context-param>

	<context-param>
		<param-name>username</param-name>
