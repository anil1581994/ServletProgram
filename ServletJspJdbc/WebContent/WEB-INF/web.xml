<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:web="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
		<servlet-name>servlet1</servlet-name>
		<servlet-class>com.bridgelabz.program.RegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>servlet1</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>servlet2</servlet-name>
		<servlet-class>com.bridgelabz.program.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>servlet2</servlet-name>
		<url-pattern>/loginServlet</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>filter</filter-name>
		<filter-class>com.bridgelabz.program.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>filter</filter-name>
		<url-pattern>/home</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>preServlet</servlet-name>
		<servlet-class>com.bridgelabz.program.PreHomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>preServlet</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
</web-app>